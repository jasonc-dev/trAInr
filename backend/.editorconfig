# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C# files
[*.cs]
indent_style = space
indent_size = 4
tab_width = 4

# Code analysis rules for unused code detection
dotnet_diagnostic.IDE0051.severity = warning # Remove unused private members
dotnet_diagnostic.IDE0052.severity = warning # Remove unread private members
dotnet_diagnostic.IDE0059.severity = warning # Remove unnecessary value assignment
dotnet_diagnostic.IDE0060.severity = warning # Remove unused parameter
dotnet_diagnostic.CS0168.severity = warning  # Variable is declared but never used
dotnet_diagnostic.CS0219.severity = warning  # Variable is assigned but its value is never used
dotnet_diagnostic.IDE0079.severity = warning # Remove unnecessary import

# Additional code quality rules
dotnet_diagnostic.CA1822.severity = warning # Mark members as static
dotnet_diagnostic.CA1801.severity = warning # Review unused parameters
dotnet_diagnostic.CA2208.severity = warning # Instantiate argument exceptions correctly
dotnet_diagnostic.IDE0007.severity = none # Use explicit type instead of 'var'

# Style rules
dotnet_style_require_accessibility_modifiers = never:warning
# Both 'var' and explicit types are allowed without warnings
# csharp_style_var_elsewhere = true:none
# csharp_style_var_when_type_is_apparent = true:none